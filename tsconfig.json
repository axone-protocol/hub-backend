{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": [
    "./src/**/*",
    "./utils/**/*",
    "@types"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
